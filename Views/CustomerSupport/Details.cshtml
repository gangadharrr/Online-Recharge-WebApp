@model Online_Recharge_WebApp.Models.CustomerSupport

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CustomerSupport</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Reference Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id) 
        <dt class = "col-sm-2">
            Email Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailId)
        </dd>
        <dt class = "col-sm-2">
            Subject
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EntryType)
        </dd>
        <dt class = "col-sm-2">
            Time of Complaint
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComplaintMessage)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
       
            @if (Model.Completed)
            {
                <dd class="col-sm-10" style="color:red">Solved</dd>
            }
            else
            {
                <dd class="col-sm-10" style="color:red">Pending</dd>
            }
        
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
